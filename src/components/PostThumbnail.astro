---
import type { CollectionEntry } from 'astro:content';
interface Props {
    post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
---

<a href={`/collections/${post.data.slug}`} 
   class={`shadow-xl relative zoom border-8 border-b-28 border-white`}
   style={`--overlay-color: ${post.data.color}; rotate: ${post.data.rotate}deg;`}>
    <img src={post.data.cover.src} class="border-8 border-b-20 border-white" alt="..." />
    <div class="absolute -bottom-4 w-full text-xl z-2" style="font-family: cursive;">
      <div class="flex justify-center w-full">
        {post.data.title}
      </div>
    </div>
</a>

<style>
.overlay::before {
    --overlay-color2: red;
  content: '';
  z-index: 2;
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  background: linear-gradient(25deg, var(--overlay-color) 0%, rgba(0, 0, 0, 0) 36%);
}

.zoom {
  transition: transform .12s; /* Animation */
}

.zoom:hover {
  transform: scale(1.08); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
  z-index: 4;
}
</style>