---
import type { CollectionEntry } from 'astro:content';
interface Props {
    post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
---

<a href={`/collections/${post.data.slug}`} 
   class="shadow-lg relative overlay zoom"
   style={`--overlay-color: ${post.data.color}`}>
    <img src={post.data.cover.src} alt="..." />
    <div class="absolute bottom-1 left-2 text-xl text-white text-shadow-lg z-2">
        {post.data.title}
    </div>
</a>

<style>
.overlay::before {
    --overlay-color2: red;
  content: '';
  z-index: 2;
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  background: linear-gradient(25deg, var(--overlay-color) 0%, rgba(0, 0, 0, 0) 36%);
}

.zoom {
  transition: transform .12s; /* Animation */
}

.zoom:hover {
  transform: scale(1.08); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
  z-index: 4;
}
</style>